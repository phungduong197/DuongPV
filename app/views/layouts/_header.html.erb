<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Duong", "/", class: "logo"%>
    <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to t("static_pages.home.title"), "/" %></li>
      <li><%= link_to t("static_pages.help.title"), "/help" %></li>
      <% if logged_in? %>
          <li><%= link_to t("sessions.new.user"), "#" %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %> 
              <%= t "sessions.new.acc" %> <b class="caret"> </b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("sessions.new.profile"), current_user %></li>
              <li><%= link_to t("sessions.new.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("sessions.new.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("sessions.new.title"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
